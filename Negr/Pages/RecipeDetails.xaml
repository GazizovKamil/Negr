<Page x:Class="Negr.Windows.RecipeDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Negr.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Детали рецепт">

    <Grid>
        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24" FontWeight="Bold"/>

        <Image Source="{Binding ImagePath}" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>

        <TextBlock Text="{Binding Instructions}" TextWrapping="Wrap" Width="350" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,270,0,0" FontSize="16"/>

        <Button Content="Закрыть" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" FontSize="16" Click="Close_Click"/>
    </Grid>
</Page>
